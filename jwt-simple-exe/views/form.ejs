<%- include('sections/header.form.ejs'); -%>
    <section class="container">
        <img src="/img/<%= path %>.png" alt="<%= path %>">
        <h1><%= title %></h1>
        <form action="/<% path %>" method="post">
            <input type="text" name="fname" id="fname" placeholder="Enter Firstname" required <%= none %> />
            <input type="text" name="lname" id="lname" placeholder="Enter Lastname" <%= none %> />
            <input type="text" name="email" id="email" placeholder="Enter Email"required />
            <input type="password" name="pwd" id="pwd" placeholder="Enter Password"required />
            <button type="submit"><%= title %><i class="fa-solid fa-arrow-right-to-bracket"></i></button>
        </form>
        <pre style="user-select: none;"><%= content %> -> <a href="/<%= suggest %>" style="text-transform: capitalize;"><%= suggest %></a></pre>
    </section>
    <%- include('sections/footer.form.ejs'); -%>